<div class="card p-5">
<form action="/notes/edit-note/{{note._id}}" method="POST">
<div class="mb-3">
  <label for="noteName" class="form-label">Note name</label>
  <input type="text" class="form-control" value="{{note.title}}" name="title" id="noteName" placeholder="title">
</div>
<div class="mb-3">
  <label for="textContent" class="form-label">Text content</label>
  <textarea name="description"  class="form-control" id="textContent" rows="3">{{note.description}}</textarea>
</div>
<button class="btn btn-warning" type="submit"><i class="fas fa-edit"></i> Edit</button>
</form>
</div>
